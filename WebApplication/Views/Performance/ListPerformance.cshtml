@model IEnumerable<BLL.DTO.DTOPerformance>

@{
    ViewData["Title"] = "ListPerformance";
    Layout="_AdminLayout";
}

<h1>ListPerformance</h1>

<table class="table">
    <thead> 
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPerformance", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeletePerformance", new { id=item.Id }) |
                @Html.ActionLink("Add", "AddPerformance", new {})
            </td>
        </tr>
}
    </tbody>
</table>
