@model WebApplication.Models.LoginViewModel



<div class="login-page">
    <div class="form">
        <form class="login-form" asp-action="LoginPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" asp-for="Login" placeholder="Login*" />
            <input type="password" asp-for="Password" placeholder="Password*" />
            <input type="submit" value="Sign in" />
            <p class="message">Not registered? @Html.ActionLink("Sign up!", "Registration", "User")</p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}