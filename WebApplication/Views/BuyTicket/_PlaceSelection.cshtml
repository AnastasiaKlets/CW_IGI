@model BLL.Service.SeatsSchema

<div>
    <table>
        @foreach (byte[] row in Model.Seats)
        {
            <tr>
                @foreach(byte seat in row)
                {
                    @if(seat == 0)
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            <div style="background-color: aquamarine; margin: 2px; height: 20px; width: 20px;">
                            </div>
                        </td>
                    }
                }
            </tr>
        }
    </table>
</div>
